@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@section BeforeMain
{
    <a class="govuk-back-link" asp-controller="Home" asp-action="Index">Back to dashboard</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
    

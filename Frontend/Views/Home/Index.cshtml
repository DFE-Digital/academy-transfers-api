@model Frontend.Views.Home.Index

@{
    ViewData["Title"] = "Transfer an academy to another trust";
}

<div class="govuk-grid-row govuk-!-margin-bottom-9">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Transfer an academy to another trust
        </h1>
        <p class="govuk-body-l">
            Use this service to start a new academy transfer project or update an existing project.
        </p>
        <a asp-controller="Transfers" asp-action="TrustName" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
            Start a new transfer project
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-l">
            Projects
        </h2>
        <h3 class="govuk-heading-m">
            Pre-HTB
        </h3>
        @foreach (var project in Model.Projects)
        {
            <div class="dfe-application-card">
                <div class="dfe-application-card--project-info">
                    <h3 class="govuk-heading-m">
                        <a class="govuk-link govuk-link--no-visited-state govuk-!-margin-right-1" asp-controller="Project" asp-action="Index" asp-route-id="@project.Urn">
                            @project.OutgoingAcademyName
                        </a>
                        <span class="govuk-caption-l govuk-!-display-inline">
                            URN @project.OutgoingAcademyUrn
                        </span>
                    </h3>
                    <p class="govuk-body govuk-!-margin-bottom-1">
                        Application to transfer to: @project.IncomingTrustName
                    </p>
                </div>
            </div>
        }
    </div>
</div>
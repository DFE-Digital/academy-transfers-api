@using Data.Models
@using Frontend.Helpers
@model BenefitsViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var otherFactors = EnumHelpers<TransferBenefits.OtherFactor>.GetDisplayableValues(TransferBenefits.OtherFactor.Empty).Select((item, index) => (item, index));
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form asp-action="OtherFactors" method="post" novalidate="">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="waste-hint">
                    <legend class="govuk-fieldset__legend">
                        <h1 class="govuk-fieldset__heading">
                            <span class="govuk-caption-m">
                                Reference number: @Model.Project.Name
                            </span>
                        </h1>
                        <h1 class="govuk-heading-l">
                            Are there any other factors to consider during this transfer?
                        </h1>
                    </legend>
                    <div id="waste-hint" class="govuk-hint">
                        Select all that apply.
                    </div>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        @foreach (var (factor, index) in otherFactors)
                        {
                            <div class="govuk-checkboxes__item">
                                <input class="govuk-checkboxes__input" id="otherFactors[@index].Key" name="otherFactors" type="checkbox" value="@factor.ToString()" aria-controls="conditional-@factor.ToString()" aria-expanded="false">
                                <label class="govuk-label govuk-checkboxes__label" for="otherFactors[@index].Key">
                                    @{
                                        var display = EnumHelpers<TransferBenefits.OtherFactor>.GetDisplayValue(factor);
                                        @display
                                    }
                                </label>
                            </div>
                            <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden" id="conditional-@factor.ToString()">
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="otherFactors[@index].Value">
                                        Specify this concern further
                                    </label>
                                    <input name="otherFactorDescriptions[@index].Key" value="@factor.ToString()">
                                    <input class="govuk-input govuk-!-width-two-thirds" id="otherFactors[@index].Value" name="otherFactorDescriptions[@index].Value" type="text" spellcheck="false">
                                </div>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" data-module="govuk-button">
                Save and continue
            </button>
        </form>
    </div>
    <div class="govuk-grid-column-one-third">
        <aside class="app-related-items" role="complementary">
            <h2 class="govuk-heading-s" id="subsection-title">
                Useful information
            </h2>
            <nav role="navigation" aria-labelledby="subsection-title">
                <ul class="govuk-list govuk-!-font-size-16">
                    <li>
                        <a class="govuk-link" href="#">
                            View full application
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" href="#">
                            School information on TRAMS
                        </a>
                    </li>
                    <hr class="govuk-grid-one-third govuk-section-break govuk-section-break--m govuk-section-break--visible">
                </ul>
            </nav>
            <h2 class="govuk-heading-s" id="subsection-title">
                Guidance
            </h2>
            <nav role="navigation" aria-labelledby="subsection-title">
                <ul class="govuk-list govuk-!-font-size-16">
                    <li>
                        <a class="govuk-link" href="#">
                            Guidance for setting an HTB date
                        </a>
                    </li>
                    <li>
                        <a class="govuk-link" href="#">
                            Full Guidance
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
    </div>
</div>